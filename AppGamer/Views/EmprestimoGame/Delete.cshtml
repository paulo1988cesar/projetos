@model AppGamer.Models.EMPRESTIMO

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

</br>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="panel panel-default">
        <div class="panel-heading">Devolução do Game</div>
        <div class="panel-body">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-4">
                        <label for="nome">Game:</label>
                        <div class="form-group">
                            @Html.DisplayTextFor(model => model.GAME.DESCRICAO)
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <label for="nome">Emprestado desde:</label>
                        <div class="form-group">
                            @Html.DisplayTextFor(model => model.DATAEMPRESTIMO)
                        </div>
                    </div>
                    <div class="col-sm-4">
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <input type="submit" value="Delete" class="btn btn-primary" /> | @Html.ActionLink("Lista de Games Emprestados", "Index")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}