@model AppGamer.Models.PLATAFORMA

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

</br>

<div class="panel panel-default">
    <div class="panel-heading">Editar Plataforma: @Html.DisplayFor(model => model.DESCRICAO)</div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="container-fluid">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.CODPLATAFORMA)

                <hr />

                <div class="row">
                    <div class="col-sm-12">
                        <label for="nome">Plataforma:</label>
                        <div class="form-group">
                            @Html.EditorFor(model => model.DESCRICAO, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DESCRICAO, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" /> | @Html.ActionLink("Lista de Plataformas", "Index")
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}